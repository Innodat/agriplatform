{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",              // compiled JS output
    "declaration": true,           // emit .d.ts files for type safety
    "paths": {
      "@schemas/*": ["schemas/zod/*"],
      "@services/*": ["services/*"],
      "@lib/*": ["lib/*"],
      "@shared": ["index.ts"] // barrel for the whole package

    }
  },
  "include": ["schemas/zod", "index.ts", "services", "lib"],
  "exclude": ["**/*.deno.ts"]
}
